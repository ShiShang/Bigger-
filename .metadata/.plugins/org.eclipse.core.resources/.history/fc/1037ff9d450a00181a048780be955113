  <script type="text/javascript">
  function load()
  {
	  var id=getParam("house_id");
	  
	  $.ajax({
		  type:"post",
		  dataType: 'json',
		  data:{
			  "id":id,
		  },
		  url:"/bigger/house/detail",
		  success:function(result)
		      {
			     if(result.success==true)
			    	 {
			    	  var results=result.data;
			    	  document.getElementById("username").value=results.controller;
			    	  document.getElementById("title").value=results.name;
			    	  document.getElementById("cost").value=results.cost;
			    	  document.getElementById("remark").value=results.remark;
			    	  document.getElementById("create_time").value=results.start_time;
			    	  document.getElementById("end_time").value=results.end_time;
			    	  document.getElementsByClassName("am-btn am-btn-default am-btn-xs am-active").item(0).innerText=results.status;
			    	  
			    	 }
			     else
			    	 {
			    	    alert(result.message);
			    	    return;
			    	 }
		      }
	  })}

  function save()
  {
	  var name=document.getElementById("title").value;
	  var remark=document.getElementById("remark").value;
	  var cost=document.getElementById("cost").value;
	  var create_time=document.getElementById("create_time").value;
	  var end_time=document.getElementById("end_time").value;
	  var member=document.getElementById("username").value;
	  
	  if(document.getElementsByClassName("am-btn am-btn-default am-btn-xs am-active").item(0)==null)
		  {
		      alert("请选择状态！");
		      return;
		  }
	  var status=document.getElementsByClassName("am-btn am-btn-default am-btn-xs am-active").item(0).innerText;
	  if(name==""||remark==""||cost==""||create_time==""||end_time=="")
		  {
		     alert("请先完善所有信息后再次提交！");
		     return;
		  }
	  if(status=="")
		  {
		  alert("请选择状态！");
	      return;
		  }
	  
		  $.ajax({
		  type:"post",
		  dataType: 'json',
		  url:"/bigger/house/addhouse",
		  data:
			  {
			      "name":name,
			      "create_time":create_time,
			      "cost":cost,
	              "end_time":end_time,
	              "status":status,
	              "remark":remark,
	              "member":member
			  },
		  success:function(result)
		      {
			     if(result.success==true)
			    	 {
			    	    alert(result.message);
			    	 }
			     else
			    	 {
			    	    alert(result.message);
			    	 }
		      }
		  })
 
  }
  
  function upload()
  {
	  var formData = new FormData();  
	  formData.append("file",document.getElementById("file").files[0])
      var ajaxUrl = "/bigger/att/addatt";

      $.ajax({
          type: "POST",
          //dataType: "text",
          url: ajaxUrl,
          data: formData,
          async: false,  
          cache: false,  
          contentType: false,  
          processData: false,
          success: function (data) {
          alert("附件上传成功！");
          document.getElementById("button").style.display="none";;
          },
          error: function(data) {
        	  alert("附件上传失败！");

           }
      });
      return false;
  
  
  </script>
  
